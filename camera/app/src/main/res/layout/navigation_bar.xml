<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/navigation_bar_left_ib"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingRight="18dp"
            android:src="@drawable/go_back" />

        <TextView
            android:id="@+id/navigation_bar_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/navigation_bar_left_ib"
            android:layout_centerVertical="true"
            android:text="@string/album"
            android:textColor="@color/local_gallery_activity_action_bar_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dis_conncect"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/stop_link"
            android:textColor="@color/normal_text_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/navigation_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/find"
            android:textColor="@color/normal_text_color"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/navigation_bar_right_ib"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:src="@drawable/setting"
            android:visibility="gone" />

        <Button
            android:id="@+id/navigation_bar_right_bt"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:text="@string/choose"
            android:textColor="@color/normal_text_color"
            android:visibility="gone" />
    </RelativeLayout>

</com.google.android.material.appbar.AppBarLayout>